@model List<Entities.Dtos.MovieDto>

<section class="pupular">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="block-title">En Çok İzlenenler</h2>
                <div class=" row">
                    @foreach (var item in Model)
                    {
                        <div class="movie-list-item ms-0 col-6 col-sm-6 col-md-4 col-lg-4 col-xl-2">
                            <a href="/Film/Detay/@item.Movie.Id">
                                <div class="popular-movie-poster position-relative">
                                    <img src="@item.Movie.PosterLink" />
                                    <div class="position-absolute bottom-0 start-0">
                                        <span class="badge bg-warning fs-6 m-1">IMDB: @item.Movie.IMDB</span>
                                    </div>
                                    <div class="position-absolute bottom-0 end-0">
                                        <span class="badge bg-danger fs-6 m-1">@item.Movie.Year</span>
                                    </div>
                                </div>
                            </a>
                            <div class="video-content">
                                <h2 class="video-title">
                                    <a href="/Film/Detay/@item.Movie.Id">@item.Movie.Name</a>
                                </h2>
                                <div class="video-info d-flex align-items-center text-trusncate">
                                    @foreach (var genre in item.Genres)
                                    {
                                        <span class="me-1">@genre.Name</span>
                                        
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- Col End -->
        </div>
        <!-- Row End -->
    </div>
    <!-- Container End -->
</section>